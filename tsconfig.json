{
  "compilerOptions": {
    "target": "Es2022", // 编译目标为ES2022
    "module": "EsNext", // 使用CommonJS模块系统
    "rootDir": "./", // 源代码根目录
    "strict": true, // 启用所有严格类型检查
    "esModuleInterop": true, // 允许ES模块与CommonJS互操作
    "skipLibCheck": true, // 跳过声明文件类型检查
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "moduleResolution": "bundler", // 使用Node.js模块解析策略
    "sourceMap": true, // 生成source map文件
    "experimentalDecorators": true, // 启用实验性装饰器语法
    "emitDecoratorMetadata": true, // 为装饰器生成元数据
    "resolveJsonModule": true,
    "removeComments": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist",
      "target": "Es2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  },
  "include": ["**/*.ts"] // 包含的源文件路径
}
